# Environment
APP_ENV=dev
APP_SECRET=your_app_secret_here
APP_DEBUG=true

# Database
DATABASE_URL=mysql://workoflow:password@mariadb:3306/workoflow_db

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# MinIO S3 Storage
MINIO_ENDPOINT=http://minio:9000
MINIO_ROOT_USER=workoflow
MINIO_ROOT_PASSWORD=workoflow123
MINIO_BUCKET=workoflow-files
MINIO_REGION=us-east-1
MINIO_USE_PATH_STYLE=true

# Redis
REDIS_URL=redis://redis:6379

# MCP Server
MCP_AUTH_USER=workoflow
MCP_AUTH_PASSWORD=workoflow

# Encryption
ENCRYPTION_KEY=your_32_char_encryption_key_here

# Application
APP_URL=http://localhost:3979
APP_LOCALE=de
APP_LOCALES=de,en

# Trusted Proxies (use REMOTE_ADDR to trust all proxies, or specify IP ranges)
TRUSTED_PROXIES=REMOTE_ADDR

# JWT
JWT_PASSPHRASE=your_jwt_passphrase

# CORS
CORS_ALLOW_ORIGIN=^https?://(localhost|127\.0\.0\.1)(:[0-9]+)?$

# MySQL Production Settings
MYSQL_ROOT_PASSWORD=your_root_password
MYSQL_DATABASE=workoflow_db
MYSQL_USER=workoflow
MYSQL_PASSWORD=your_mysql_password
###> symfony/framework-bundle ###
APP_ENV=dev
APP_SECRET=
###< symfony/framework-bundle ###


###> lexik/jwt-authentication-bundle ###
JWT_SECRET_KEY=%kernel.project_dir%/config/jwt/private.pem
JWT_PUBLIC_KEY=%kernel.project_dir%/config/jwt/public.pem
###< lexik/jwt-authentication-bundle ###

MAGIC_LINK_SECRET=your-very-secret-key-change-this-in-production-minimum-32-chars

# Workoflow Azure Integration
## Required when the user is connecting Sharepoint
AZURE_CLIENT_ID="xxxxxxx"
AZURE_CLIENT_SECRET="xxxxxxx"
AZURE_TENANT_ID="xxxxxxx"
AZURE_REDIRECT_URL="xxxxxxx"

